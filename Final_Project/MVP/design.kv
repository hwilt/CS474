#:kivy 2.1.0

<BottomRectangle>
    size_hint_y: None
    size_hint_x: None
    height: 50
    width: self.width
    canvas:
        Color:
            rgba: 252/255.0, 176/255.0, 52/255.0, 1
        Rectangle:
            #pos: 400, 400
            size: 4000, 50
            #pos: 1, 1

    CustomLayout:
		Button:
        	text: 'Home'
			color: 0,0,0,1
        # default size_hint is 1, 1, we don't need to specify it explicitly
        # however it's provided here to make things clear
        	size_hint: 1, 1
			background_normal: ''
			background_color: (252/255.0, 176/255.0, 52/255.0, 1)
            pos: 200,0
